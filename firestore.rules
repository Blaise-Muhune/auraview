rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Famous person ratings: public read (for leaderboard), write requires auth
    match /famousPersonRatings/{ratingId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.fromUserId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.fromUserId;
    }

    // Groups: public read, write only by creator/participants
    match /groups/{groupId} {
      allow read: if true;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.createdBy;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.createdBy || 
         request.auth.uid in resource.data.participants);
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.createdBy;
    }
    
    // Users: only owner can read full profile (includes email); authenticated users can read for leaderboard/profile display
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // userProfiles (if used - e.g. by getUserProfilesByIds)
    match /userProfiles/{profileId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Ratings: public read; create/update/delete via API only (server validates)
    match /ratings/{ratingId} {
      allow read: if true;
      allow create, update, delete: if false;
    }
  }
}